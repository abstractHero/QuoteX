<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/common_white</item>
        <item name="preferenceTheme">@style/SettingsTheme</item>
        <item name="alertDialogTheme">@style/DialogTheme</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SplashTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="SettingsTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="colorAccent">@color/tab_settings</item>
    </style>

    <style name="DialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/tab_settings</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/common_white</item>
        <item name="android:textColorSecondary">@color/common_white</item>
        <item name="colorAccent">@color/common_white</item>
    </style>

</resources>
